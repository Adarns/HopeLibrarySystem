<!DOCTYPE html>
<html>

	<%- include("./../public/back/header.ejs") %>
		<div class="main-content container floatfix">
			<%- include("./../public/back/sidebar.ejs") %>
			<div class="user-right">
				<%- include("./../public/back/userinfo.ejs") %>
				<div class="user-oparate">
					<form>
					<div class="upload-user-img">
							<img src="<%=book.bookImgSrc%>" alt="">
								<input type="file" id="user-img" class="upload-img">
						</div>
						<div class="form-group">
							<label for="">图书名：</label>
							<input type="text" value="<%=book.bookName%>" id="bookName" >
						</div>
						<div class="form-group">
							<label for="">厚朴编号：</label>
							<input type="text" value="<%=book.bookHopeID%>" id="hopeID">
						</div>
						<div class="form-group">
							<label for="">分类：</label>
							<div class="radio">
							<%for(var i=0,max=bookCate.length;i<max;i++){%>
                            	<label class="radio-inline"><input type="radio" name="bookGroup" value="" <%if(bookCate[i]==book.bookCate){%> checked <%}%> ><%=bookCate[i]%></label>
                            <%}%>
							</div>
						</div>
						<div class="form-group">
							<label for="">作者：</label>
							<input type="text"  value="<%=book.bookAuthor%>" id="bookAuthor">
						</div>
						<div class="form-group">
							<label for="">ISBN：</label>
							<input type="text" id="bookISBN" value="<%=book.bookISBN%>" >
						</div>
						<div class="form-group">
							<label for="">出版社：</label>
							<input type="text" id="bookPress" value="<%=book.bookPress%>" >
						</div>
						<p class="button-group button-group-2"><button type="button" id="save">保存</button><a class="button" href="javascript:history.go(-1);location=location"  title="返回">返回</a></p>
					</form>
				</div>
			</div>
		</div>
		<%- include("./../public/back/footer.ejs") %>
		<script src="/js/modifybook.js"></script>
		<script src="/js/public/loginout.js"></script>
	</body>
</html>